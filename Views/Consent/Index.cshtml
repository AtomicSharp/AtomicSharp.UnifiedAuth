@model AtomicSharp.UnifiedAuth.Controllers.Consent.ConsentViewModel

<div class="page-consent">
  <div class="lead">
    @if (Model.ClientLogoUrl != null)
    {
      <div class="client-logo">
        <img src="@Model.ClientLogoUrl">
      </div>
    }
    <h1>
      @Model.ClientName
      <small class="text-muted">is requesting your permission</small>
    </h1>
    <p>Uncheck the permissions you do not wish to grant.</p>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <partial name="_ValidationSummary" />
    </div>
  </div>

  <form asp-action="Index">
    <input asp-for="ReturnUrl"
           type="hidden" />
    <div class="row">
      <div class="col-sm-8">
        @if (Model.IdentityScopes.Any())
        {
          <div class="form-group">
            <div class="card">
              <div class="card-header">
                <span class="glyphicon glyphicon-user"></span>
                Personal Information
              </div>
              <ul class="list-group list-group-flush">
                @foreach (var scope in Model.IdentityScopes)
                {
                  <partial model="@scope"
                           name="_ScopeListItem" />
                }
              </ul>
            </div>
          </div>
        }

        @if (Model.ApiScopes.Any())
        {
          <div class="form-group">
            <div class="card">
              <div class="card-header">
                <span class="glyphicon glyphicon-tasks"></span>
                Application Access
              </div>
              <ul class="list-group list-group-flush">
                @foreach (var scope in Model.ApiScopes)
                {
                  <partial model="scope"
                           name="_ScopeListItem" />
                }
              </ul>
            </div>
          </div>
        }

        <div class="form-group">
          <div class="card">
            <div class="card-header">
              <span class="glyphicon glyphicon-tasks"></span>
              Description
            </div>
            <div class="card-body">
              <input asp-for="ClientDescription"
                     autofocus
                     class="form-control"
                     placeholder="Description or name of device">
            </div>
          </div>
        </div>

        @if (Model.AllowRememberConsent)
        {
          <div class="form-group">
            <div class="form-check">
              <input asp-for="RememberConsent"
                     class="form-check-input">
              <label asp-for="RememberConsent"
                     class="form-check-label">
                <strong>Remember My Decision</strong>
              </label>
            </div>
          </div>
        }
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <button autofocus
                class="btn btn-primary"
                name="action"
                value="allow">
          Yes, Allow
        </button>
        <button class="btn btn-secondary"
                name="action"
                value="deny">
          No, Do Not Allow
        </button>
      </div>
      <div class="col-lg-auto col-sm-4">
        @if (Model.ClientUrl != null)
        {
          <a class="btn btn-outline-info"
             href="@Model.ClientUrl">
            <span class="glyphicon glyphicon-info-sign"></span>
            <strong>@Model.ClientName</strong>
          </a>
        }
      </div>
    </div>
  </form>
</div>
